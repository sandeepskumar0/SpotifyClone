@model SpotifyClone.Models.Category


@{

    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Custom CSS for dark theme */
        body {
            background-color: #343a40; /* Dark background color */
            color: #ffffff; /* Light text color */
        }

        /* Style for the container */
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #212529; /* Darker container background color */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2); /* Light box shadow */
            margin-top: 50px;
        }

        /* Style for headings */
        h4 {
            color: #ffffff; /* Light heading text color */
        }

        /* Style for horizontal line */
        hr {
            border-color: #ffffff; /* Light horizontal line color */
        }

        /* Style for the form elements */
        .form-group {
            margin-bottom: 20px;
        }

        /* Style for labels */
        label {
            color: #ffffff; /* Light label text color */
        }

        /* Style for the Save button */
        .btn-save {
            background-color: #007bff; /* Blue button background color */
            color: #ffffff; /* Light button text color */
            border: none;
        }

            .btn-save:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h4>Category</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Cat_Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Cat_Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Cat_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cat_Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-save">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</body>
</html>
