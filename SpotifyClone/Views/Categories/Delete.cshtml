@model SpotifyClone.Models.Category


@{

    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <!-- Include Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Custom CSS for dark theme */
        body {
            background-color: #343a40; /* Dark background color */
            color: #ffffff; /* Light text color */
        }

        /* Style for the container */
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #212529; /* Darker container background color */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2); /* Light box shadow */
            margin-top: 50px;
        }

        /* Style for headings */
        h3, h4 {
            color: #ffffff; /* Light heading text color */
        }

        /* Style for horizontal line */
        hr {
            border-color: #ffffff; /* Light horizontal line color */
        }

        /* Style for the delete button */
        .btn-delete {
            background-color: #dc3545; /* Red button background color */
            color: #ffffff; /* Light button text color */
            border: none;
        }

            .btn-delete:hover {
                background-color: #c82333; /* Darker red on hover */
            }

        /* Style for the Back to List link */
        .back-link {
            color: #ffffff; /* Light link text color */
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Category</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Cat_Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Cat_Name)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <!-- Replace "Delete" text with the delete icon -->
                    <button type="submit" class="btn btn-delete">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                    | @Html.ActionLink("Back to List", "Index", null, new { @class = "back-link" })
                </div>
            }
        </div>
    </div>
</body>
</html>
